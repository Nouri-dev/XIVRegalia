{% extends 'base.html.twig' %}

{% block title %}Inscription | XIV REGALIA{% endblock %}

{% block body %}
	<main>

     <section class="registertitre">
        <h1>Inscription</h1>
     </section>

		
			<div class="registercorp">
				
            
            <div class="registerdiv">
					

					{{ form_start(registrationForm) }}
					<fieldset class="registeridentite">
						<legend>Identité</legend>
						{{ form_row(registrationForm.lastname) }}
						{{ form_row(registrationForm.firstname) }}
						{{ form_row(registrationForm.email) }}
						{{ form_row(registrationForm.phone) }}
					</fieldset>

					<fieldset class="">
						<legend>Mes coordonnées</legend>
						{{ form_row(registrationForm.Address) }}
						{{ form_row(registrationForm.city) }}
						{{ form_row(registrationForm.zipcode) }}
						{{ form_row(registrationForm.country) }}
					</fieldset>

					<fieldset class="">
						<legend>Mon mot de passe</legend>
						{{ form_row(registrationForm.plainPassword, { label: 'Mot de passe :' }) }}
						{{ form_row(registrationForm.RGPDConsent) }}
					</fieldset>

					<button type="submit" class="bouttonrondbleu">M'inscrire</button>
					
					{{ form_end(registrationForm) }}

				
            </div>


			</div>
		

   </main>

{% endblock %}
